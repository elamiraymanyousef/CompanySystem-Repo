@model UserToReturnDTO
@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    @* لكي يعرضها عندما يضيف قسم *@
    <div class="alert alert-success">
        @TempData["Message"];
    </div>

}


<div class="row">
    <div class="col-4">

        <h1 class="text-center my-4">Delete Employee</h1>

    </div>
    <div class="col-8">
        <!-- صورة الموظف -->

        <img src="~/Images/@Model.ImageName" width="120" height="120" class="rounded-circle border" alt="Employee Image">
    </div>


</div>

<div class="container">
    <form asp-action="Delete">
        <div class="form-group">
            <label class="col-form-label" asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly />
            
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

       

        <div class="form-group">
            <label class="col-form-label" asp-for="Roles"></label>
            <input asp-for="Roles" class="form-control" readonly />
        </div>


       

       
@* 
        <div class="form-group " hidden>
            <label class="col-form-label" asp-for="ImageName" ></label>
            <input asp-for="ImageName" class="form-control" readonly />
        </div> *@

        <div class="d-flex justify-content-start gap-3">
            <input type="submit" value="Delete" class="btn btn-danger"  />
            <a asp-action="Index" class="btn btn-dark">Back to List</a>
        </div>
    </form>
</div>
