@model ResetPasswordDTO
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="mb-2 alert alert-danger"></div>

		<form asp-action="ResetPassword">
			<input class="text" asp-for="NewPassword" placeholder="NewPassword" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			
			<input type="submit" value="Reste Password">
		</form>
	</div>
</div>

@section Validation
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: Arial, sans-serif;
    }

    .main-agileinfo {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .agileits-top {
        background: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 100%;
        max-width: 400px;
        backdrop-filter: blur(10px);
    }

    .text {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        border: none;
        background: rgba(255, 255, 255, 0.3);
        color: white;
        font-size: 16px;
    }

        .text::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    .wthree-text {
        text-align: left;
        font-size: 14px;
        margin-bottom: 15px;
        color: white;
    }

    input[type="submit"] {
        background: #ff4081;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        transition: 0.3s;
    }

        input[type="submit"]:hover {
            background: #e91e63;
        }

    p {
        margin-top: 10px;
        font-size: 14px;
        color: white;
    }

        p a {
            color: #ff4081;
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }
</style>
